<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_FILE}.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- 根日志级别 -->
    <root level="DEBUG">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>
    
    <!-- 知识点相关日志级别 -->
    <logger name="com.example.coursemanagement.controller.KnowledgePointController" level="TRACE" />
    <logger name="com.example.coursemanagement.service.KnowledgePointService" level="TRACE" />
    <logger name="com.example.coursemanagement.repository.KnowledgePointRepository" level="TRACE" />
    
    <!-- Spring JDBC日志级别 -->
    <logger name="org.springframework.jdbc.core" level="DEBUG" />
    <logger name="org.springframework.jdbc.datasource" level="DEBUG" />
</configuration>